---
import type { Locale } from '../i18n/config';
import { routeFor } from '../i18n/routes';
import { t } from '../i18n/ui';

type Props = {
  menuCurrent?: string;
};

const { locale } = Astro.locals as { locale: Locale };
const { menuCurrent } = Astro.props;

const footerLinks = [
  { id: 'accessibility', translationKey: 'accessibilityStatement', labelKey: 'footerLinks.accessibilityStatement' },
  { id: 'reuse', translationKey: 'reuse', labelKey: 'footerLinks.reuse' },
  { id: 'cookies', translationKey: 'cookies', labelKey: 'footerLinks.cookies' },
] as const;
---

<footer id="footer" class="footer">
  <div class="container-lg">
    <ul class="footer-links">
      {footerLinks.map((item) => (
        <li>
          <a
            href={routeFor(locale, item.translationKey)}
            class:list={['footer-link', { active: menuCurrent && item.id === menuCurrent }]}
          >
            {t(locale, item.labelKey)}
          </a>
        </li>
      ))}
    </ul>
  </div>
</footer>

<style>
  .footer {
    margin-top: 2rem;
    padding: 1rem 0;
    border-top: 1px solid rgba(0, 0, 0, 0.12);
  }
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .footer-link {
    color: inherit;
  }
  .footer-link.active {
    font-weight: 700;
  }
</style>

